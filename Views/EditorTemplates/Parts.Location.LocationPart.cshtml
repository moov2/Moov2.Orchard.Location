@model Moov2.Orchard.Location.Models.LocationPart

@{
    Script.Require("LocationAdminJs");

    Style.Require("LocationAdminStyle");
}

<h2>@T("Location")</h2>

<a href="#" class="js-show-location-all">@T("Click to show all")</a>

<fieldset class="js-location-field location-field @(string.IsNullOrEmpty(Model.Name) ? "location-admin--hidden" : "")">
    <label for="@Html.FieldIdFor(m => m.Name)">@T("Name")</label>
    @Html.TextBoxFor(m => m.Name, new { @class = "text" })
    <span class="hint">@T("Name of addressee (e.g. John Smith)")</span>
</fieldset>

<fieldset class="js-location-field location-field @(string.IsNullOrEmpty(Model.Company) ? " location-admin--hidden" : "" )">
    <label for="@Html.FieldIdFor(m => m.Company)">@T("Company")</label>
    @Html.TextBoxFor(m => m.Company, new { @class = "text" })
    <span class="hint">@T("Company name (e.g. Boxes Ltd.)")</span>
</fieldset>

<fieldset class="js-location-field location-field @(string.IsNullOrEmpty(Model.UnitApartment) ? " location-admin--hidden" : "" )">
    <label for="@Html.FieldIdFor(m => m.UnitApartment)">@T("Unit/Apartment")</label>
    @Html.TextBoxFor(m => m.UnitApartment, new { @class = "text" })
    <span class="hint">@T("Unit/Apartment name or number (e.g. Unit 2 / Flat B.)")</span>
</fieldset>

<fieldset class="js-location-field location-field @(string.IsNullOrEmpty(Model.NameOrNumber) ? " location-admin--hidden" : "" )">
    <label for="@Html.FieldIdFor(m => m.NameOrNumber)">@T("Name or Number")</label>
    @Html.TextBoxFor(m => m.NameOrNumber, new { @class = "text" })
    <span class="hint">@T("Building name or number (e.g. 8.)")</span>
</fieldset>

